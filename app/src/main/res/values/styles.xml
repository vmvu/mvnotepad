<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="bookItemStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btnYesStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/rectangle_corners</item>
        <item name="android:src">@drawable/ic_check_black_24dp</item>
    </style>

    <style name="btnNoStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/rectangle_corners</item>
        <item name="android:src">@drawable/ic_close_black_24dp</item>
    </style>

    <style name="ButtonBaseStyle" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>

    </style>

    <style name="CustomAlert" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    



</resources>
